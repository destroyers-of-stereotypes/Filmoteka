<div class="modal">
    <div class="modal__img-container modal__conteiner">
        {{#if poster_path}}
        <img src="https://www.themoviedb.org/t/p/w220_and_h330_face{{poster_path}}"
            data-source="https://www.themoviedb.org/t/p/w220_and_h330_face{{poster_path}}" alt="{{title}}"
            class="modal__img-container--image" />
        {{else}}
        <img src="https://upload.wikimedia.org/wikipedia/commons/6/64/Poster_not_available.jpg" alt="{{title}}"
            class="modal__img-container--image" />
        {{/if}}
    </div>

    <div class="modal-info modal__conteiner">
        <h2 class="modal-info__movie-title">{{title}}</h2>
        <div class="modal-info__lists">
            <ul class="modal-info__list">
                <li class="modal-info__item-title">Vote / Votes</li>
                <li class="modal-info__item-title">Popularity</li>
                <li class="modal-info__item-title">Original title</li>
                <li class="modal-info__item-title">Genre</li>
            </ul>
            <ul class="modal-info__list">
                <li class="modal-info__item-text"><span
                        class="modal-info__item-text--orange-bgr">{{vote_average}}</span>
                    <span class="modal-info__item-title">/</span>
                    <span>{{vote_count}}</span>
                </li>
                <li class="modal-info__item-text">{{popularity}}</li>
                <li class="modal-info__item-text">{{original_title}}</li>
                <li class="modal-info__item-text modal-info__item-text--genres">{{#each this.genres}}
                    <span>{{this.name}}</span>
                    {{/each}}
                </li>
            </ul>
        </div>
        <div class="modal-info__about">
            <h3 class="modal-info__about-title">About</h3>
            <p class="modal-info__about-overview">
                {{overview}}
            </p>
        </div>

        <div class="modal-info__buttons">
            <button type='button' class="modal-info__btn">add to watched</button>
            <button type='button' class="modal-info__btn">add to queue</button>
        </div>
    </div>

    <button type="button" class="modal__icon-close closeModalBtn"></button>
</div>